<Window x:Class="DesktopPopcat.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:gif="http://wpfanimatedgif.codeplex.com"
        mc:Ignorable="d"
        Title="Desktop Popcat" Height="135" Width="100"
        WindowStyle = "None"
        AllowsTransparency = "True"
        Background="Transparent"
        ResizeMode="CanResizeWithGrip"
        Closing="MainWindow_Closing" ShowInTaskbar="False" Icon="./icon.ico"
        >
    <Grid>
        <Image gif:ImageBehavior.AnimatedSource="/pop_cat.gif" 
               gif:ImageBehavior.RepeatBehavior="1" gif:ImageBehavior.AutoStart="True"/>
    </Grid>
</Window>
